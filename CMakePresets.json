    "configurePresets": [
        {
            "name": "flags-windows",
            "description": "Set up the compile flags for MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/MP /utf-8 /permissive- /EHsc"
            }
        },
        {
            "name": "flags-unix",
            "description": "Set up the compile flags for GCC and Clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -WError"
            }
        },
        {
            "name": "Clang MSVC amd64",
