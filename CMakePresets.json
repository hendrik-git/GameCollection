{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },

    "configurePresets": [
        {
            "name": "flags-windows",
            "description": "Set up the compile flags for MSVC",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "/MP /utf-8 /permissive- /EHsc"
            }
        },
        {
            "name": "flags-unix",
            "description": "Set up the compile flags for GCC and Clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-Wall -WError"
            }
        },
        {
            "name": "msvc",
            "displayName": "MSVC",
            "generator": "Visual Studio 16 2019",
            "binaryDir": "build/msvc",
            "inherits": "flags-windows",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },
        {
            "name": "clang",
            "displayName": "Clang",
            "generator": "Ninja Multi-Config",
            "binaryDir": "build/clang",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "llvm,host=x64",
                "strategy": "external"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang.exe",
                "CMAKE_CXX_COMPILER": "clang.exe"
            }
        }
    ],

    "buildPresets": [
        {
            "name": "ninja-debug",
            "hidden": false,
            "configurePreset": "clang",
            "configuration": "Debug"
        },

        {
            "name": "ninja-release",
            "hidden": false,
            "configurePreset": "clang",
            "configuration": "Release"
        }
    ]
}